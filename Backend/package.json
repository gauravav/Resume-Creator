{
  "name": "resume-api-server",
  "version": "1.0.0",
  "description": "Node.js API server for resume application with authentication and MinIO storage",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
